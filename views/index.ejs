<style>
    .del:checked + span{
        color:red;
    }
    .game-list{
        list-style:none;
    }
</style>


<form method="post" action="/game/add">
        <label>Add Task</label>
        <input type="text" name="game" placeholder="Add Game">
        <input type="submit" value="Submit">
</form>


<%= title %>

<form method="post" action="/game/delete">
    <ul class="game-list">
        <% games.forEach(function(game){ %>
            <li>
                <label>
                    <input type="checkbox" name="games" class="del" value="<%= game %>">
                    <span><%= game %></span>
                </label>
            </li>
        <% }) %>
    </ul>
    <input type="submit" value="Remove">
<form>
